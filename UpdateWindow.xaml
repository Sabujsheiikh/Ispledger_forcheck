<Window x:Class="ISPLedger.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Available"
        Height="300"
        Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <StackPanel>

            <TextBlock Text="New Update Available!"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>

            <TextBlock x:Name="VersionText"
                       FontWeight="SemiBold"
                       Margin="0,0,0,10"/>

            <TextBlock Text="What's New:"
                       FontWeight="Bold"
                       Margin="0,0,0,4"/>

            <ScrollViewer Height="130">
                <TextBlock x:Name="NotesText"
                           TextWrapping="Wrap"/>
            </ScrollViewer>

                <ProgressBar x:Name="DownloadProgress" Height="16" Minimum="0" Maximum="100" Value="0" Visibility="Collapsed" Margin="0,10,0,0"/>

                <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">

                <Button Content="Later"
                    Width="90"
                    Margin="0,0,10,0"
                    Click="Later_Click"/>

                <Button x:Name="PrimaryButton" Content="Download Update"
                    Width="160"
                    Click="Download_Click"/>

                </StackPanel>
        </StackPanel>
    </Grid>
</Window>
